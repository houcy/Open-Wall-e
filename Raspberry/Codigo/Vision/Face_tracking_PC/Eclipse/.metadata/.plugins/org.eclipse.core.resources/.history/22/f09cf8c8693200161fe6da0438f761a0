#include "Utilities.h"



string get_ProgramDirectory(){
	char cwd[1024];
	getcwd(cwd, sizeof(cwd));

	return cwd;
}



string print_time(double t){
	double s, ms;
	int min;
	char sTmp[255];

	s = t/1000000;
	ms = t/1000;
	min = ( (int) s)/60;

	sprintf(sTmp,"\n (Face Tracking) %f us = %f ms = %f s", t, ms, s);
	debug(sTmp);

	return sTmp;
}
