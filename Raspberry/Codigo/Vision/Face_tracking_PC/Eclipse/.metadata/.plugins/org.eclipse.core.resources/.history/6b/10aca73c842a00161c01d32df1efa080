#ifndef SRC_UTILITIES_H_
#define SRC_UTILITIES_H_

#include "Librerias_Reconocimiento.h"
#include "Defines.h"


/////////////////////////////////////////////////
// trace if TRACE==1
/////////////////////////////////////////////////
inline void trace(string s)
{
	cout << s;
}



/////////////////////////////////////////////////
// debug if DEBUG==1
/////////////////////////////////////////////////
inline void debug(string s)
{
	printf ("\n DEBUG: %s", s);
}


#endif /* SRC_UTILITIES_H_ */
