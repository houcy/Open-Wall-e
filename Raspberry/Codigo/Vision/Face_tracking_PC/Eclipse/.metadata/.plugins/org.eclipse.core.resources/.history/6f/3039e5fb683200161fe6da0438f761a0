#include "Utilities.h"



string get_ProgramDirectory(){
	char cwd[1024];
	getcwd(cwd, sizeof(cwd));

	return cwd;
}



void print_time(double t){
	double s;
	int min;

	s = t/1000000;
	min = ( (int) t/1000)/60;
	cout << endl << t << " msec";
	cout << endl << s << " s";
	cout << endl << min << " min";
}
